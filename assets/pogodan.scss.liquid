// TIMELINE ORDERED LIST
#timeline {
  text-align: center;
  img {
    margin-top: 15px;
    margin-right: 15px;
  }
  ol {
    list-style: none;
    padding: 0;
    border-left: 4px solid #05537a;
    counter-reset: numbered-list;
    margin: 40px;
    position: relative;
    text-align:left;

    li {
      margin: 0;
      padding: 0;
      font-size: 14px;
      line-height: 1.2;
      margin-bottom: 50px;
      padding-left: 30px;
      &:last-child {
        border-left: 3px solid #fff;
        margin-left: -3px;
      }

      &:before {
        background-color: white;
        border: 4px solid #05537a;
        border-radius: 50%;
        color: #05537a;
        content: counter(numbered-list,decimal);
        counter-increment: numbered-list;
        display: block;
        font-weight: bold;
        width: 50px;
        height: 50px;
        margin-top: -0.5em;
        line-height: 40px;
        position: absolute;
        left: -28px;
        text-align: center;
        font-size: 30px;
      }
    }
  }
}
@media screen and (min-width: 768px) {
  #timeline ol {
    margin: 40px 200px;
  }
}

